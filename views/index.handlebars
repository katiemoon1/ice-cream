<div class='container'>
    {{!-- Header for the page --}}
    <div class='row' id='header'>
        <h3 class='text-center'>Ice Cream! Yay!</h3>
        <img src='/img/ice-cream.png' alt='ice cream cone' width='225' height='250'>
    </div>
    {{!-- Columns for devoured vs. not devoured ice cream --}}
    <div class='row'>
        <div class='col-md-6'>
            <h5>ice cream that is ready to eat!</h5>
            <ul>
                {{#each icecream}}
                    {{#unless devoured}}
                        {{> icecream-block notDevoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class='col-md-6'>
            <h5>ice cream that has been devoured!</h5>
            <ul>
                {{#each icecream}}
                    {{#if devoured}}
                       <p>{{icecream_name}}</p>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    {{!-- Input box to put new ice cream into the list --}}
    <form id='new-icecream'>
        <div class='form-group' style='width: 50%; margin: 0 auto;'>
            <label for='inputIceCream'>Enter in your favorite ice cream!</label>
            <input type='icecream' class='form-control' id='name' placeholder='ice cream!'>
        </div>
        <button type='submit' class='btn btn-primary mb-2'>submit!</button>
    </form>
</div>